<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.arghyam">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".ArghyamApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:screenOrientation="portrait"
                android:name=".iam.ui.OtpVerifyActivity"
                android:label="@string/title_activity_otp_verify"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".splash.ui.SplashActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".iam.ui.profile.ui.ProfileActivity"
                android:label="@string/title_activity_profile"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".landing.ui.activity.LandingActivity"
                android:label="@string/app_name">
        </activity>

        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false"/>

        <activity android:name=".example.ui.ExampleActivity">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".iam.ui.LoginActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <receiver
                android:name=".landing.services.SmsReceiver"
                android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>