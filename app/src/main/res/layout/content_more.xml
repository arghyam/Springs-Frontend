<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
                android:id="@+id/sign_in_for_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="16dp">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/signin_option"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:paddingBottom="16dp"
                />

                <Button
                        android:id="@+id/sign_in_button"
                        android:layout_width="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="40dp"
                        android:background="#0D65D9"
                        android:text="SIGN IN"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/user_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2372D9"
            android:visibility="visible"
            android:padding="16dp">


        <RelativeLayout
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

            <ImageView
                    android:id="@+id/add_icon"
                    android:layout_width="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_mobile"/>

            <TextView
                    android:id="@+id/countryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:paddingLeft="12dp"
                    android:layout_toRightOf="@+id/add_icon"
                    android:textSize="18dp"
                    android:text="+91 "

            />
            <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_toRightOf="@+id/countryCode"
                    android:textSize="18dp"
            />

        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/rl_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginBottom="10dp">

            <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    app:srcCompat="@drawable/ic_user_profile"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@+id/user_icon"
                    android:id="@+id/tv_username"
                    android:textSize="30sp"/>

            <ImageView
                    android:id="@+id/edit_icon"
                    android:paddingTop="10dp"
                    android:layout_width="22dp"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_edit"/>

        </RelativeLayout>


        <LinearLayout
                android:id="@+id/edit_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">


            <ImageView
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_user_profile"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/save_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:textColor="@color/white"
                        android:drawableRight="@drawable/ic_tick_icon"
                        android:textSize="30sp"
                        android:singleLine="true">
                </EditText>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/admin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:visibility="gone"
                android:focusable="true"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/admin_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_user"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#595958"
                    android:paddingLeft="16dp"
                    android:layout_toRightOf="@+id/admin_icon"
                    android:id="@+id/admin_panel"
                    android:text="Admin Panel"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_next"

            />

        </RelativeLayout>
        <View
                android:id="@+id/admin"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="55dp"
                android:background="#D8D8D8"/>

        <RelativeLayout
                android:id="@+id/faq_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#595958"
                    android:paddingLeft="16dp"
                    android:layout_toRightOf="@+id/info_icon"
                    android:id="@+id/frequently_question"
                    android:text="@string/FAQ"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_next"

            />

        </RelativeLayout>

        <View
                android:id="@+id/view_landing"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="55dp"
                android:background="#D8D8D8"/>


        <RelativeLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
        >

            <ImageView
                    android:id="@+id/about_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_about"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#595958"
                    android:paddingLeft="16dp"
                    android:layout_toRightOf="@+id/about_img"
                    android:id="@+id/tv_about"
                    android:text="About"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_next"
            />

        </RelativeLayout>

        <View
                android:id="@+id/view_about"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D8D8D8"
                android:layout_marginLeft="55dp"/>

        <RelativeLayout
                android:id="@+id/help_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
        >

            <ImageView
                    android:id="@+id/about_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_help"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#595958"
                    android:layout_toRightOf="@+id/about_icon"
                    android:id="@+id/about"
                    android:paddingLeft="16dp"
                    android:text="Help"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_next"
            />

        </RelativeLayout>

        <View
                android:id="@+id/view_help"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D8D8D8"
                android:layout_marginLeft="55dp"/>

        <RelativeLayout
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
        >

            <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_signout"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#595958"
                    android:layout_toRightOf="@+id/logout_icon"
                    android:id="@+id/logout"
                    android:paddingLeft="16dp"
                    android:text="@string/logout"
                    android:textSize="16sp"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/ic_next"
            />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>