<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_below="@+id/app_bar">

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/search_layout">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/view"
                    android:background="#e6e6e6" />
            <RelativeLayout
                    android:id="@+id/geo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#0D65D9"
                        android:text="Search by geography"/>

                <ImageView
                        android:id="@+id/search_geo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        app:srcCompat="@drawable/ic_next"/>
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#e6e6e6" />

            <TextView
                    android:id="@+id/recent_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent search"
                    android:textSize="12sp"
                    android:padding="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentSearchRecyclerView"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_below="@+id/spring_near"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchRsultRecyclerView"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:visibility="invisible"
                    android:layout_below="@+id/spring_near"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_alignParentBottom="true"
            android:padding="16dp">

        <Button
                android:id="@+id/search_spring"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#0D65D9"
                android:text="SEARCH"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>