<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:scrollbars="none"
        android:orientation="vertical"
        tools:context=".landing.ui.fragment.HomeFragment">


    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:title="@string/app_name"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/errorScreen"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="80dp"
                        android:src="@drawable/ic_drops"
                        android:layout_height="80dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:text="@string/no_springs_nearby"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/margin_32"
                        android:textColor="@color/bokara_grey"
                        android:textSize="@dimen/text_size_18"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/locationPermission"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_32"
                            android:layout_marginLeft="@dimen/margin_64"
                            android:layout_marginRight="@dimen/margin_64"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/allow_location_permission"
                            android:layout_height="wrap_content"/>


                    <Button
                            android:layout_width="200dp"
                            android:layout_marginTop="@dimen/margin_32"
                            android:textColor="@color/white"
                            android:text="@string/continue_button"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="45dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/springSearch"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/margin_32"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:src="@drawable/ic_search"
                            android:layout_height="24dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/padding_4"
                            android:text="@string/search_for_springs"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/springs"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/near_me_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_icon_shape"
                            android:padding="15dp"/>


                    <TextView
                            android:id="@+id/spring_near"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_14"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:textColor="#262524"
                            android:text="Springs near me">

                    </TextView>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/springRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/spring_near"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:srcCompat="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="#fff"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            app:borderWidth="0dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/floatingActionButton"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>