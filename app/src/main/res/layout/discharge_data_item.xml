<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/discharge_data_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="wrap_content">


        <LinearLayout
                android:paddingLeft="16dp"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/background_border"
                android:gravity="center"
                android:weightSum="5"
                android:layout_weight="3.6">

            <ImageView
                    android:layout_width="@dimen/image_16"
                    android:id="@+id/dd_tick"
                    app:srcCompat="@drawable/ic_tick"
                    android:layout_marginLeft="1dp"
                    android:layout_height="@dimen/image_16"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="5"
                    android:id="@+id/dd_date"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_14"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/bokara_grey"
                    android:layout_height="fill_parent"/>

        </LinearLayout>

        <TextView
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_weight="2.8"
                android:id="@+id/dd_discharge"
                android:background="@drawable/background_border"
                android:gravity="center_vertical"
                android:textColor="@color/bokara_grey"
                android:layout_height="fill_parent"/>

        <TextView
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_weight="3.8"
                android:id="@+id/dd_submitted"
                android:textColor="@color/bokara_grey"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_height="fill_parent"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gainsboro_50"/>
</LinearLayout>