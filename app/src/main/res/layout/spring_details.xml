<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_72"
            android:layout_height="match_parent"
            tools:showIn="@layout/fragment_details">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:id="@+id/images_view_pager"
                    android:layout_height="250dp">
            </androidx.viewpager.widget.ViewPager>
            <RelativeLayout
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    android:text="20/April/2019"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom | right"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    android:text="4:30 PM"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_16"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:text="@string/details"
                        android:textColor="@color/ship_grey"
                        android:layout_height="wrap_content"/>
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/spring_name"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/ship_grey"
                        />
                        <TextView
                                android:text=":  Gaurikund"
                                android:layout_weight="4"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/bokara_grey"
                        ></TextView>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/location"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/ship_grey"
                        />
                        <TextView
                                android:text=":  Kedarnath, Uttarakhand"
                                android:layout_weight="4"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/bokara_grey"
                        ></TextView>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/ownership"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/ship_grey"
                        />
                        <TextView
                                android:text=":  Public"
                                android:layout_weight="4"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/bokara_grey"
                        ></TextView>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/spring_id"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/ship_grey"
                        />
                        <TextView
                                android:text=":  Spring5682"
                                android:layout_weight="4"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/bokara_grey"
                        ></TextView>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/submitted_by"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_12"
                                android:textColor="@color/ship_grey"
                        />
                        <TextView
                                android:text=":  Ramesh Agarwal"
                                android:layout_weight="4"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/bokara_grey"
                        ></TextView>
                    </TableRow>
                </TableLayout>
            </LinearLayout>


            <View android:layout_height="2dp"
                  android:background="@color/gainsboro"
                  android:layout_width="match_parent"/>
            <LinearLayout
                    android:id="@+id/additional_details_layout"
                    android:layout_width="match_parent"
                    android:padding="@dimen/padding_16"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/add_additional_details"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="7dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        app:srcCompat="@drawable/ic_next"/>
            </LinearLayout>
            <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/additional_data">

                <View android:layout_height="2dp"
                      android:background="@color/gainsboro"
                      android:layout_width="match_parent"/>
                <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_16">
                    <TextView
                            android:textSize="@dimen/text_size_14"
                            android:layout_width="match_parent"
                            android:textColor="@color/ship_grey"
                            android:text="@string/seasonality_of_the_spring"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="@dimen/text_size_18"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:id="@+id/tv_seasonality"
                            android:textColor="@color/bokara_grey"
                            android:text="Seasonal (Jun, Jul, Aug, Sep)"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <View android:layout_height="2dp"
                      android:visibility="visible"
                      android:background="@color/gainsboro"
                      android:layout_width="match_parent"/>
                <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_16">
                    <TextView
                            android:textSize="@dimen/text_size_14"
                            android:layout_width="match_parent"
                            android:textColor="@color/ship_grey"
                            android:text="@string/spring_water_use"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="@dimen/text_size_18"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:textColor="@color/bokara_grey"
                            android:id="@+id/tv_water_use"
                            android:text="Domestic"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <View android:layout_height="2dp"
                      android:visibility="visible"
                      android:background="@color/gainsboro"
                      android:layout_width="match_parent"/>
                <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_16">
                    <TextView
                            android:textSize="@dimen/text_size_14"
                            android:layout_width="match_parent"
                            android:textColor="@color/ship_grey"
                            android:text="@string/household_dependency"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="@dimen/text_size_18"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"
                            android:id="@+id/tv_household_dependency"
                            android:textColor="@color/bokara_grey"
                            android:text="150"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <View android:layout_height="2dp"
                      android:visibility="visible"
                      android:background="@color/gainsboro"
                      android:layout_marginBottom="8dp"
                      android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>