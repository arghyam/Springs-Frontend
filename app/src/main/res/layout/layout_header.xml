<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/user_name"
                android:textSize="16sp"
                android:lineHeight="19sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bokara_grey"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="16dp"
                android:text="User name1"/>

        <TextView

                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 9898989898"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="#8C8C8B"/>

        <LinearLayout
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:visibility="visible">

            <TextView
                    android:id="@+id/admin_role"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorAccent"
                    android:text="Admin"
                    android:visibility="visible"/>


            <TextView
                    android:id="@+id/breaker"
                    android:layout_width="3dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="l"
                    android:gravity="top"
                    android:visibility="visible"/>

            <TextView
                    android:id="@+id/reviewer_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="10dp"
                    android:text="Reviewer"
                    android:visibility="visible"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
            android:id="@+id/viewIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/down"/>

</RelativeLayout>